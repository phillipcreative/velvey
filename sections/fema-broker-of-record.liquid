{{ 'fema-broker-of-record.css' | asset_url | stylesheet_tag }}

{% comment %}
  FEMA Broker of Record Pricing Section
  A clean, customizable section for displaying FEMA broker pricing information
{% endcomment %}

<div class="fema-broker-pricing" style="background: {{ section.settings.background_color }};">

  <!-- Header Section -->
  {% if section.settings.show_header %}
  <div class="fema-header" style="padding: {{ section.settings.header_padding }}px 0;">
    <div class="container">
      <h2 class="fema-title" style="color: {{ section.settings.title_color }}; font-size: {{ section.settings.title_size }}px; text-align: center;">
        {{ section.settings.title }}
      </h2>
    </div>
  </div>
  {% endif %}

  <!-- Main Content Section -->
  <div class="fema-content">
    <div class="container">

      <!-- Broker Oversight Box -->
      <div class="broker-oversight-box" style="border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }}; background: {{ section.settings.box_background }};">
        <div class="box-header">
          <h3 class="box-title" style="color: {{ section.settings.box_title_color }}; text-align: center;">
            {{ section.settings.box_title }}
          </h3>
        </div>

        <div class="box-content">
          <ul class="features-list">
            {% for block in section.blocks %}
              {% if block.type == 'feature' %}
                <li class="feature-item" style="color: {{ section.settings.text_color }};">
                  {{ block.settings.feature_text }}
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>

        <div class="pricing-info">
          <h4 class="price" style="color: {{ section.settings.price_color }};">
            {{ section.settings.price_text }}
          </h4>
        </div>

        {% if section.settings.show_cta_button %}
        <div class="cta-section">
          <a href="{{ section.settings.cta_link }}" class="cta-button" style="background: {{ section.settings.button_background }}; color: {{ section.settings.button_text_color }};">
            {{ section.settings.cta_text }}
          </a>
        </div>
        {% endif %}
      </div>

      <!-- Add-ons Table -->
      {% if section.settings.show_addons %}
      <div class="addons-section">
        <table class="addons-table">
          <thead>
            <tr>
              <th style="background: {{ section.settings.table_header_background }}; color: {{ section.settings.table_header_text_color }};">
                {{ section.settings.addons_header }}
              </th>
              <th style="background: {{ section.settings.table_header_background }}; color: {{ section.settings.table_header_text_color }};">
                {{ section.settings.price_header }}
              </th>
            </tr>
          </thead>
          <tbody>
            {% for block in section.blocks %}
              {% if block.type == 'addon' %}
                <tr>
                  <td>{{ block.settings.addon_name }}</td>
                  <td>{{ block.settings.addon_price }}</td>
                </tr>
              {% endif %}
            {% endfor %}
          </tbody>
        </table>

        {% if section.settings.show_disclaimer %}
        <p class="disclaimer" style="color: {{ section.settings.disclaimer_color }};">
          {{ section.settings.disclaimer_text }}
        </p>
        {% endif %}
      </div>
      {% endif %}

    </div>
  </div>

</div>

